# Security Configuration
SECURITY_JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-at-least-64-characters-long
SECURITY_JWT_ALGORITHM=HS256
SECURITY_JWT_EXPIRATION_HOURS=24
SECURITY_ENCRYPTION_KEY=your-encryption-key-here-must-be-32-bytes-base64-encoded
SECURITY_PASSWORD_MIN_LENGTH=12
SECURITY_PASSWORD_REQUIRE_SPECIAL=true
SECURITY_RATE_LIMIT_REQUESTS=100
SECURITY_RATE_LIMIT_WINDOW=3600

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=insight_miner
DB_USERNAME=postgres
DB_PASSWORD=your-secure-database-password
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_SSL_MODE=prefer
DB_CONNECT_TIMEOUT=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password
REDIS_MAX_CONNECTIONS=50
REDIS_CONNECTION_TIMEOUT=5
REDIS_SOCKET_KEEPALIVE=true
REDIS_SSL_ENABLED=false
REDIS_SSL_CERT_REQS=required

# External Services Configuration
EXTERNAL_OPENAI_API_KEY=sk-your-openai-api-key
EXTERNAL_OPENAI_MODEL=gpt-4
EXTERNAL_OPENAI_MAX_TOKENS=2000
EXTERNAL_OPENAI_TEMPERATURE=0.7
EXTERNAL_OPENAI_TIMEOUT=30

EXTERNAL_GOOGLE_CREDENTIALS_PATH=/path/to/google-credentials.json
EXTERNAL_GOOGLE_PROJECT_ID=your-google-project-id

EXTERNAL_AWS_ACCESS_KEY_ID=your-aws-access-key
EXTERNAL_AWS_SECRET_ACCESS_KEY=your-aws-secret-key
EXTERNAL_AWS_REGION=us-east-1

# Application Configuration
APP_ENVIRONMENT=development
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_HOST=0.0.0.0
APP_PORT=8000
APP_WORKERS=4
APP_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]
APP_FILE_UPLOAD_MAX_SIZE=104857600
APP_FILE_UPLOAD_ALLOWED_TYPES=[".csv", ".xlsx", ".json"]
APP_BATCH_SIZE=100
APP_MAX_CONCURRENT_TASKS=10